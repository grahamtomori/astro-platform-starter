---
import '../styles/global.css';
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Graham Tomori</title>
    </head>

    <body class="font-sans">
        <!-- Navbar -->
        <nav class="fixed top-0 left-0 w-full bg-white shadow z-50">
            <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
                <a href="#home" class="text-xl font-bold">Graham Tomori</a>
                <div class="space-x-6">
                    <a href="/about" class="hover:text-blue-500">About</a>
                    <a href="/projects" class="hover:text-blue-500">Projects</a>
                    <a href="/contact" class="hover:text-blue-500">Contact</a>
                </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <section id="home" class="min-h-screen flex flex-col items-center justify-center bg-[url('/images/rockefeller-god-3.jpg')] bg-cover bg-center relative">
            <!-- Push hero text lower with padding -->
            <div class="bg-black bg-opacity-50 p-10 rounded-2xl text-center mt-40">
                <h1 class="text-5xl font-bold text-white mb-6">Welcome to My Site</h1>
                <p class="text-lg text-gray-200 max-w-2xl mx-auto">This is where you can add your homepage introduction or tagline.</p>
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="py-24 max-w-4xl mx-auto px-6">
            <h2 class="text-3xl font-bold mb-6">About Me</h2>
            <p class="text-lg leading-relaxed">
                Hi! My name is Graham Tomori, and I’m a Freshman at Butler University studying International Business. I’m passionate about geopolitics,
                economics, and building solutions for developing nations.
            </p>
        </section>

        <!-- Projects Section -->
        <section id="projects" class="py-24 bg-gray-100">
            <div class="max-w-5xl mx-auto px-6">
                <h2 class="text-3xl font-bold mb-6">Projects</h2>
                <div class="grid md:grid-cols-2 gap-8">
                    <div class="p-6 bg-white rounded-xl shadow hover:shadow-lg transition">Project 1</div>
                    <div class="p-6 bg-white rounded-xl shadow hover:shadow-lg transition">Project 2</div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="py-24 max-w-4xl mx-auto px-6">
            <h2 class="text-3xl font-bold mb-6">Contact</h2>
            <p>
                Email:
                <a href="mailto:graham@example.com" class="text-blue-500">graham@example.com</a>
            </p>
        </section>
    </body>
</html>
