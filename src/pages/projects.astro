---
import '../styles/global.css';
const year = new Date().getFullYear();
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Projects | Graham Tomori</title>
    </head>

    <body class="font-sans bg-[#cfc6b8] text-[#3b2f2f]">
        <!-- Navbar -->
        <nav class="fixed top-0 left-0 w-full bg-[#3b2f2f] shadow-md z-50">
            <div class="flex justify-between items-center text-white w-full pl-3">
                <!-- Logo + Name + Tagline -->
                <div class="flex items-center space-x-3">
                    <img src="/images/stretched-globe-csa-images.png" alt="Globe Logo" class="h-16 w-auto object-contain relative top-0.5" />
                    <div class="flex flex-col justify-center">
                        <span class="text-xl font-bold text-gray-100">Graham Tomori</span>
                        <span class="text-sm italic text-gray-300">Curiosity in Motion</span>
                    </div>
                </div>

                <!-- Links -->
                <div class="space-x-6 mr-6">
                    <a href="/" class="hover:text-[#c4b78b]">Home</a>
                    <a href="/about" class="hover:text-[#c4b78b]">About</a>
                    <a href="/projects" class="hover:text-[#c4b78b] font-bold">Projects</a>
                    <a href="/Ivory" class="hover:text-[#c4b78b]">Ivory</a>
                    <a href="/resume" class="hover:text-[#c4b78b]">Resume</a>
                    <a href="/contact" class="hover:text-[#c4b78b]">Contact</a>
                </div>
            </div>
        </nav>

        <!-- Main Projects Content -->
        <main class="pt-40 pb-24 max-w-5xl mx-auto px-6">
            <h1 class="text-4xl font-serif font-bold mb-10">Projects</h1>

            <div class="grid md:grid-cols-2 gap-10">
                <div class="p-6 bg-[#e6ddd1] rounded-xl shadow hover:shadow-lg transition">
                    <h2 class="text-xl font-semibold mb-3">MOCKIMFPROJECT</h2>
                    <p>A simulated think tank exploring economic recovery strategies, development policy, and geopolitical frameworks.</p>
                </div>

                <div class="p-6 bg-[#e6ddd1] rounded-xl shadow hover:shadow-lg transition">
                    <h2 class="text-xl font-semibold mb-3">Personal Website</h2>
                    <p>Built with Astro + Tailwind CSS to showcase international business work, development research, and personal projects.</p>
                </div>
            </div>
        </main>

        <!-- Footer -->
        <footer class="bg-[#3b2f2f] text-gray-100 py-6">
            <div class="max-w-6xl mx-auto px-6 text-center">
                &copy; {year} Graham Tomori. All rights reserved.
            </div>
        </footer>
    </body>
</html>
