---
import '../styles/global.css';
const year = new Date().getFullYear();
---

<!-- Navbar -->
<nav class="fixed top-0 left-0 w-full bg-[#3b2f2f] shadow-md z-50">...</nav>

<!-- Category Tabs Strip -->
<div class="flex justify-center pt-36 px-6 z-40">
    <div class="bg-white rounded-xl w-full max-w-4xl shadow-sm py-3">...</div>
</div>

<!-- IVORY / Journal Content -->
<section class="min-h-screen flex items-start justify-center pt-6 px-6">
    <div class="bg-white shadow-lg rounded-xl w-full max-w-4xl p-12 leading-relaxed text-[#3B2F2F] mt-6">...</div>
</section>

<!-- Footer -->
<footer class="bg-[#3b2f2f] text-gray-100 py-6 mt-auto">
    <div class="max-w-6xl mx-auto px-6 text-center">
        &copy; {year} Graham Tomori. All rights reserved.
    </div>
</footer>
