---
import '../styles/global.css';
const year = new Date().getFullYear();
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Contact | Graham Tomori</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    </head>

    <body class="font-sans bg-gray-100 text-gray-100">
        <!-- Navbar -->
        <nav class="fixed top-0 left-0 w-full bg-[#3b2f2f] shadow-md z-50">
            <div class="flex justify-between items-center text-white w-full pl-3">
                <!-- Logo + Name + Tagline -->
                <div class="flex items-center space-x-3">
                    <img src="/images/stretched-globe-csa-images.png" alt="Globe Logo" class="h-16 w-auto object-contain relative top-0.5" />
                    <div class="flex flex-col justify-center">
                        <span class="text-xl font-bold text-gray-100">Graham Tomori</span>
                        <span class="text-sm italic text-gray-300">Curiosity in Motion</span>
                    </div>
                </div>

                <!-- Links -->
                <div class="space-x-6 mr-6">
                    <a href="/" class="hover:text-[#c4b78b]">Home</a>
                    <a href="/about" class="hover:text-[#c4b78b]">About</a>
                    <a href="/projects" class="hover:text-[#c4b78b]">Projects</a>
                    <a href="/Ivory" class="hover:text-[#c4b78b]">Ivory</a>
                    <a href="/resume" class="hover:text-[#c4b78b]">Resume</a>
                    <a href="/contact" class="hover:text-[#c4b78b] font-bold">Contact</a>
                </div>
            </div>
        </nav>

        <!-- Contact Content -->
        <section class="pt-40 pb-24 bg-[#7a8465] min-h-screen">
            <div class="max-w-4xl mx-auto px-6 text-[#f0f0e8]">
                <h1 class="text-4xl font-serif font-bold mb-4">Get in Touch</h1>
                <p class="text-lg mb-10 italic">Letâ€™s build something meaningful together.</p>

                <!-- Contact Card -->
                <div class="bg-[#3b2f2f] rounded-2xl shadow-lg p-8 space-y-6">
                    <p class="flex items-center text-lg">
                        <i class="fa-solid fa-envelope mr-3 text-[#dcd2c0]"></i>
                        <a href="mailto:contactgrahamtomori@gmail.com" class="text-[#dcd2c0] hover:underline"> contactgrahamtomori@gmail.com </a>
                    </p>

                    <div>
                        <div class="flex items-center mb-2">
                            <i class="fa-solid fa-map-marker-alt mr-3 text-[#dcd2c0]"></i>
                            <span class="text-lg text-white">Mailing Address</span>
                        </div>
                        <address class="ml-7 text-white italic leading-relaxed">
                            Graham Tomori<br />
                            750 W Hampton Dr Box #021<br />
                            Indianapolis, IN 46208<br />
                            United States of America
                        </address>
                    </div>

                    <!-- Social Links -->
                    <div class="flex space-x-6 pt-4">
                        <a href="https://www.linkedin.com/in/graham-tomori-809038335/" target="_blank" rel="noopener noreferrer" class="hover:text-[#c4b78b]">
                            <i class="fa-brands fa-linkedin text-2xl"></i>
                        </a>
                        <a href="https://github.com/grahamtomori" target="_blank" rel="noopener noreferrer" class="hover:text-[#c4b78b]">
                            <i class="fa-brands fa-github text-2xl"></i>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="bg-[#3b2f2f] text-gray-100 py-6">
            <div class="max-w-6xl mx-auto px-6 text-center">
                &copy; {year} Graham Tomori. All rights reserved.
            </div>
        </footer>
    </body>
</html>
